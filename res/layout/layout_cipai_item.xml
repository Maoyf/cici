<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:id="@+id/head1"
            android:layout_width="fill_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/middle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <View
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/sharp_ring" />
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sharp_plus1" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/sharp_plus2" />
            </FrameLayout>

            <com.myth.cici.wiget.VerticalTextView
                android:id="@+id/num_1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:direction="uptodown"
                app:text="Sandwiches"
                app:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.myth.cici.wiget.VerticalTextView
                android:id="@+id/name1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:direction="uptodown"
                app:text="Sandwiches"
                app:textColor="@color/white" />

            <com.myth.cici.wiget.VerticalTextView
                android:id="@+id/enname1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:direction="uptodown"
                app:text="Sandwiches"
                app:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>